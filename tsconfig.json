{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        //"maxNodeModuleJsDepth": 10,
        "experimentalDecorators": true,
        "lib": [ "es2021" ],
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        //"noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "sourceMap": true
    }
}